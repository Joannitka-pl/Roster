  
    <%= form_with model: @shift, local: true do |f| %>
     <%= render 'shared/errors' %>
      <%= f.label :date %>
      <%= f.date_select :date %>
      <%= f.label :hour, 'Hours' %>
      <%= f.select :hour, @shift.hours_list %>
      <br>
      <%= f.label :studio, 'Studio' %>
      <%= f.select :studio, @shift.studios_list %>
      <%= f.submit %> 
    <% end %>